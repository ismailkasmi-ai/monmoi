
<MainPage>:
    MDBoxLayout:
        orientation: 'vertical'

        MDTopAppBar:
            title: "Accueil"
            elevation: 10
            md_bg_color: app.theme_cls.primary_color
            pos_hint: {"top": 1}

        ScrollView:
            MDBoxLayout:
                orientation: "vertical"
                padding: "16dp"
                spacing: "16dp"
                adaptive_height: True
                size_hint_y: None

                Image:
                    id: ig
                    source: app.getss(newmatricule, ig)
                    keep_ratio: True
                    allow_stretch: True
                    size_hint_y: None
                    height: "250dp"
                    pos_hint: {"center_x": 0.5}

                MDTextField:
                    id: newmatricule
                    text: app.wdj
                    hint_text: "Enter matricule"
                    helper_text: "or click on forgot matricule"
                    helper_text_mode: "on_focus"
                    icon_right: "badge-account"
                    icon_right_color: app.theme_cls.primary_color
                    size_hint_x: 0.8
                    pos_hint: {"center_x": 0.5}
                    on_text:
                        app.o_t_valid(self, usern)
                        app.getss(newmatricule, ig)

                MDTextField:
                    id: newList
                    hint_text: "Enter Password"
                    helper_text: "or click on forgot password"
                    helper_text_mode: "on_focus"
                    icon_right: "form-textbox-password"
                    icon_right_color: app.theme_cls.primary_color
                    password: True
                    size_hint_x: 0.8
                    pos_hint: {"center_x": 0.5}

                MDLabel:
                    id: usern
                    text: ""
                    font_style: "H6"
                    theme_text_color: "Custom"
                    text_color: 1, 0, 0, 1
                    halign: "center"
                    size_hint_y: None
                    height: self.texture_size[1]

                MDRaisedButton:
                    text: "Show"
                    on_press: app.clicked(newmatricule.text, newList.text)
                    size_hint_x: 0.5
                    pos_hint: {"center_x": 0.5}
